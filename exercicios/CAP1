#ifdef ex2

/*
printf
%hd hi- short
%ld - long
%s - char
%f - float
%lf - double
%d - int base decimal

e -> Nota��o cientifica

double -9.1e
float -8.1e

*/

main()
{
    setlocale(LC_ALL, "Portuguese");

    short int s = 0;
    float f = 0;
    long int l = 0;
    double d = 0;
    int i = 0;
    char vChar;


    printf("Digite um n�mero Short: ");
    scanf("%hd", &s);
    printf("Digite um n�mero Float: ");
    scanf("%f", &f);
    printf("Digite um n�mero Long: ");
    scanf("%ld", &l);

    printf("Digite um n�mero Double: ");
    scanf("%lf", &d);
    printf("Digite um n�mero Int: ");
    scanf("%d", &i);
    printf("Digite um caracter Char: ");
    scanf("%s", &vChar);
    printf("\n\n");

    printf("        10        20        30        40        50        60\n");
    printf("12345678901234567890123456789012345678901234567890123456789012345\n");
    printf("    %-6hd              %ld             %d\n", s, l, i);
    printf("              %-8f.le             %-8lf.e         %c\n", f, d, vChar);

}
#endif

